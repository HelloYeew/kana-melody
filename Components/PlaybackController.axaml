<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:KanaMelody.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KanaMelody.Components.PlaybackController"
             x:DataType="vm:PlaybackControllerViewModel">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Button Content="Play" Command="{Binding PlayCommand}" />
        <Button Content="Pause" Command="{Binding PauseCommand}" />
        <TextBlock Text="{Binding PlayingTitle}"></TextBlock>
    </StackPanel>
</UserControl>
